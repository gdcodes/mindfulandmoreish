{
  "name": "mindful-and-moreish",
  "version": "1.0.0",
  "private": true,
  "description": "A simple and visually attractive food blog using Gatsby and TypeScript.",
  "author": "Gloria",
  "keywords": [
    "gatsby",
    "typescript",
    "food-blog",
    "contentful",
    "netlify"
  ],
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve -p 9000",
    "clean": "gatsby clean",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=coverage/jest",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test develop http://localhost:8000 'cypress run --browser chrome'",
    "coverage:combine": "node -e \"const fs=require('fs'); const { execSync } = require('child_process'); if(fs.existsSync('.nyc_output')) { execSync('nyc merge .nyc_output coverage/coverage-final.json && nyc report --report-dir=coverage --reporter=lcov --reporter=text', {stdio:'inherit'}); } else { console.log('No .nyc_output directory found â€” skipping merge'); }\"",
    "coverage:full": "npm run test:coverage && npm run test:e2e && npm run coverage:combine"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^15.21.2",
    "@fontsource/merriweather": "^5.2.9",
    "@fontsource/pacifico": "^5.2.6",
    "babel-plugin-styled-components": "^2.1.4",
    "dotenv": "^16.4.5",
    "gatsby": "^5.13.5",
    "gatsby-plugin-image": "^3.13.1",
    "gatsby-plugin-manifest": "^5.14.0",
    "gatsby-plugin-sharp": "^5.13.1",
    "gatsby-plugin-styled-components": "^6.13.1",
    "gatsby-plugin-typescript": "^5.13.1",
    "gatsby-source-contentful": "^8.13.2",
    "gatsby-source-filesystem": "^5.13.1",
    "gatsby-transformer-sharp": "^5.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "styled-components": "^6.1.11"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@contentful/rich-text-types": "^16.6.1",
    "@cypress/code-coverage": "^3.14.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "babel-jest": "^30.0.0",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-preset-gatsby": "^3.14.0",
    "cypress": "^10.11.0",
    "gatsby-cypress": "^3.14.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-junit": "^16.0.0",
    "nyc": "^17.1.0",
    "react-test-renderer": "^18.3.1",
    "start-server-and-test": "^2.0.12",
    "typescript": "^5.4.5"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "src/**/__tests__/**",
      "src/**/__mocks__/**",
      "cypress/**",
      "public/**",
      ".cache/**",
      "node_modules/**"
    ]
  }
}
